{
  "name": "error-handling-backend",
  "version": "0.0.0",
  "main": "src/index.ts",
  "private": true,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "husky": ">=1",
    "lint-staged": ">=8",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "lint": "eslint --ext .ts src"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
